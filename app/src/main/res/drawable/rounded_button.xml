<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:radius="10dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <solid android:color="#0ab" />
        </shape>
    </item>

    <item android:state_pressed="true" tools:ignore="StateListReachable">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:radius="10dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <solid android:color="#0bf" />
        </shape>
    </item>
</selector>